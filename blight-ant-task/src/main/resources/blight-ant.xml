******************************************************************************* 
-->

<antlib>

    <!-- ***************************************************************
    * This compiles the templates to Java source.
    *
    * EXAMPLE:
    *
    *  <typedef
    *      resource  ="blight-ant.xml"
    *      classpath ="target/blight-ant-task-0.0.1-SNAPSHOT-jar-with-dependencies.jar"/>
    *
    *  <blight.compileTemplates
    *      outputDir="${basedir}/target/compiled-templates">
    *
    *  	   <sourceDir>${basedir}/src/main/java</sourceDir>
    *      <package>com.mycompany.myapp.mytemplatepackage</package>
    *      <package>com.mycompany.myapp.mytemplatepackage.subpackage</package>
    *
    *   </blight.compileTemplates>
    *
    **************************************************************** -->

    <typedef name="blight.compileTemplates" classname="com.aleax.blight.ant.CompileTask"/>

</antlib>
