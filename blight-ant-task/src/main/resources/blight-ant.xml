<?xml version="1.0"?>

<!-- 
*******************************************************************************
* blight-ant.xml                                                              *
*******************************************************************************
* Defines the Apache ANT (http://ant.apache.org) library for the bLight       *
* template compiler. Refer to the typedef/macro definitions below for example *
* usage.                                                                      *
*                                                                             *
* Author: Yiannis Paschalidis                                                 *
******************************************************************************* 
-->

<antlib>

    <!-- ***************************************************************
    * This compiles the bLight templates to Java source.
    *
    * EXAMPLE:
    *
    *  <typedef
    *      resource  ="blight-ant.xml"
    *      classpath ="blight-ant-task.jar"/>
    *
    *  <blight.compileTemplates
    *      outputDir="${basedir}/target/compiled-templates">
    *
    *  	   <sourceDir>${basedir}/src/main/java</sourceDir>
    *      <package>example.mycompany.myapp.templates</package>
    *
    *   </blight.compileTemplates>
    *
    **************************************************************** -->

    <typedef name="blight.compileTemplates" classname="com.aleax.blight.ant.CompileTask"/>

</antlib>
